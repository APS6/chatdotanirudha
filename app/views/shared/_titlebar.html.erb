<div class="py-4 px-3 w-full border-b border-b-white flex justify-between items-center">
	<%= link_to "<h3 class='text-2xl'>Chat<span class='text-primary'>.anirudha</span></h3>".html_safe, root_path %>
	<div data-controller="popup">
		<div data-action="click->popup#show" class="w-8 h-8 rounded-full bg-primary grid items-center text-center cursor-pointer">
			<span ><%= current_user.username[0] %></span>
		</div>
		<div data-popup-target="content" class="min-w-[8rem] p-1 flex flex-col gap-1 z-50 hidden absolute bg-stone-900 rounded ml-[-8rem]">
				<%= button_to destroy_user_session_path, method: :delete, class: " flex items-center gap-2 p-1 rounded hover:bg-red-500 w-full" do %>
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" d="M5 21q-.825 0-1.412-.587T3 19v-4h2v4h14V5H5v4H3V5q0-.825.588-1.412T5 3h14q.825 0 1.413.588T21 5v14q0 .825-.587 1.413T19 21zm5.5-4l-1.4-1.45L11.65 13H3v-2h8.65L9.1 8.45L10.5 7l5 5z"/></svg>
				<span>Logout</span>
				<% end %>
				<%= link_to edit_user_registration_path, class: "p-1 rounded hover:bg-[#4d748d] flex items-center gap-2" do %>
						<%= render "shared/svg/edit" %>
						<span>Edit</span>
				<% end %>
		</div>
		<div data-action="click->popup#hide" data-popup-target="overlay" class="fixed inset-0 w-full h-full bg-black opacity-0 z-40 hidden"></div>
	</div>
</div>