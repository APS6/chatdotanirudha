<div class="h-screen grid place-items-center">
  <div class="bg-stone-900 p-6 rounded-lg flex flex-col items-center">
    <h1 class="text-3xl pb-2">Change password</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="flex flex-col pb-4">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "text-black rounded mt-[2px] w-full" %>
        </div>

        <div class="flex flex-col pb-4">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "text-black rounded mt-[2px] w-full" %>
        </div>

        <div class="actions mt-2">
          <%= f.submit "Submit", class: "w-full bg-primary text-black py-2 rounded-lg" %>
        </div>
    <% end %>
  </div>
</div>