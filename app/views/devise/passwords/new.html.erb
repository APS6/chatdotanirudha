<div class="h-screen grid place-items-center">
  <div class="bg-stone-900 p-6 rounded-lg flex flex-col items-center">
    <h1 class="text-3xl pb-2">Forgot password?</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col pb-4">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "text-black rounded mt-[2px] w-full" %>
      </div>

      <div class="actions mt-2">
        <%= f.submit "Send reset link", class: "w-full bg-primary text-black py-2 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>