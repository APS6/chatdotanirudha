<div class="h-screen grid place-items-center">
  <div class="rounded-lg w-full max-w-[330px] flex flex-col items-center">
    <h1 class="text-2xl font-semibold pb-2">Sign Up</h1>
     <span class="mb-1">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "text-primary underline" %></span>
 <div class="pt-3 pb-1 w-full flex flex-col items-center gap-3">
        <div class="w-full flex flex-col">
                  <%= button_to user_google_oauth2_omniauth_authorize_path, html: {class: 'w-full'}, class: "flex w-full items-center justify-center gap-3 py-3  text-lg border border-white rounded-lg", data: { turbo: false } do %>
          <%= render "shared/svg/google" %> Sign in with google
        <% end %>
        </div>
      <span class="text-lg">OR</span>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'w-full flex flex-col items-center' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col pb-4 w-full">
        <%= f.label :username %>
        <%= f.text_field :username, autocomplete: "username", placeholder: "Username", class: "text-black rounded mt-[2px] w-full" %>
      </div>

      <div class="flex flex-col pb-4 w-full">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "text-black rounded mt-[2px] w-full" %>
      </div>

      <div class="flex flex-col pb-4 w-full">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em class="text-sm">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "text-black rounded mt-[2px] w-full" %>
      </div>

      <div class="flex flex-col w-full">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "text-black rounded mt-[2px] w-full" %>
      </div>

      <div class="field mt-2 self-start flex items-center gap-1">
        <%= f.check_box :receive_mail, class: "rounded" %>
        <%= f.label "Receive email notifications", for: :receive_mail %>
      </div>

      <div class="actions mt-4 w-full">
        <%= f.submit "Sign up", class: "w-full bg-primary text-black py-2 rounded-lg cursor-pointer" %>
      </div>
  <% end %>
  <div class="mt-4 flex flex-col items-center gap-2">
    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
