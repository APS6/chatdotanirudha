<div class="flex flex-col">
  <%= render "shared/titlebar" %>
  <div class="px-4 mt-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-col pb-4">
          <%= f.label :username %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "text-black rounded mt-[2px] w-full" %>
        </div>

        <div class="flex flex-col pb-4">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "text-black rounded mt-[2px] w-full" %>
        </div>

        <div class="actions mt-2">
          <%= f.submit "Update", class: "w-full bg-primary text-black py-2 rounded-lg" %>
        </div>
      <% end %>
  </div>

</div>