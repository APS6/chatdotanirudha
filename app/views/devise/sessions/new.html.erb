<div class="h-screen grid place-items-center">
  <div class="rounded-lg w-full max-w-[330px] flex flex-col items-center">
    <h1 class="text-2xl font-semibold pb-2">Login</h1>
    <span class="mb-2">Dont have an account?
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary underline" %></span>
      <div class="pt-3 pb-2 w-full flex flex-col items-center gap-3">
        <div class="w-full flex flex-col">
                  <%= button_to user_google_oauth2_omniauth_authorize_path, html: {class: 'w-full'}, class: "flex w-full items-center justify-center gap-3 py-3  text-lg border border-white rounded-lg", data: { turbo: false } do %>
          <%= render "shared/svg/google" %> Sign in with google
        <% end %>
        </div>
      <span class="text-lg">OR</span>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'w-full flex flex-col items-center' }) do |f| %>
      <div class="field pb-4 w-full ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "text-black rounded mt-1 w-full" %>
      </div>

      <div class="field w-full ">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "text-black rounded mt-1 w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2 hidden items-center gap-1 ">
          <%= f.check_box :remember_me, class: "rounded", checked: true %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-4 w-full">
        <%= f.submit "Log in", class: "w-full bg-primary text-black py-2 rounded-lg cursor-pointer" %>
      </div>
  <% end %>
  <div class="mt-4 flex flex-col items-center gap-2">
    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
